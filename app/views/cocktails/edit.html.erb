<div class="page-header">
  <h1>Edit <%= @cocktail.name %></h1> <br>
  <p> <%= link_to "Get back to the cocktails' list", cocktails_path%></p>
</div>
<div class="col-xs-6 col-sm-6 col-md-6 col-md-6">
  <%= form_for @cocktail, html: {role:"form"} do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %> <br>
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: "7"%> <br>
<br>
    <%= f.submit :class => "btn btn-primary"%>
  <% end %>
</div>