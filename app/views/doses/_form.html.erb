<button type="button" class="close" data-dismiss="alert" id="close-form">
  <span aria-hidden="true">&times;</span>
  <span class="sr-only">Close</span>
</button>

  <header>
    <h3> Add an element to <%= @cocktail.name %> </h3> <br>
  </header>

<%= form_for([@cocktail, @cocktail.doses.build]) do |f| %>
  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-md-6">
      <div class="form-group">
        <%= f.label :ingredient_id %><br>
        <%= f.collection_select :ingredient_id, Ingredient.all, :id, :name, {}, class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-6 col-md-6">
      <div class="form-group">
       <button type="button" class="btn btn-default btn-xs" id="add-ingredient" data-url="<%= new_ingredient_path %>">Not in the list? Add an ingredient!</button>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-md-6">
      <div class="form-group">
        <%= f.label :amount %><br>
        <%= f.text_field :amount, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-md-6">
      <div class="form-actions">
        <%= f.submit :class => "btn btn-primary", :id => "submit-add-element"%>
      </div>
    </div>
  </div>
  <% end %>