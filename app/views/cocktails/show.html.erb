<div class="page-header">
<h1> <%= @cocktail.name %></h1>
<h4><%= link_to "Get back to the Cocktails' list", cocktails_path %></h4>
</div>

<div class="col-xs-6 col-sm-6 col-md-6 col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Description</h3>
     </div>
    <div class="panel-body">
      <%= @cocktail.description %>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        <p class="text-left">Composition</p>
        <p class="text-right"><h4><%= link_to "Update", cocktail_doses_path(@cocktail) %></h4></p>
      </h3>
    </div>
    <div class="panel-body">
      <ul class="list-group">
        <% @cocktail.doses.each do |dose|%>
      <li class="list-group-item"><%= dose.amount%> <%= dose.ingredient.name %></li>
      <% end %>
    </ul>
    </div>
  </div>
</div>

